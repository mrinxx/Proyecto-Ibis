@charset "UTF-8";
/* Evito desbordamientos */
@import url("https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
* {
  box-sizing: border-box;
}

a {
  text-decoration: none;
  color: black;
}

body {
  background-color: #F9F9F8;
  font-family: "Montserrat", serif, Arial, Helvetica, sans-serif;
  font-weight: 400;
  font-style: normal;
  margin: 0;
}
body main {
  margin-bottom: 5%;
}

/*Estilos para los botones*/
.clicker {
  position: relative;
  transition: all 0.2s ease;
  border: none;
  background-color: #F9F9F8;
  margin-left: 30%;
  margin-top: 2%;
}
.clicker span {
  position: relative;
  font-size: 16px;
  font-weight: 900;
}

/* Elemento de color */
.clicker:before {
  content: "";
  position: absolute;
  top: -50%;
  left: 0;
  display: block;
  border-radius: 10px;
  background: #FAA81D;
  width: 56px;
  height: 56px;
  transition: all 0.3s ease;
}

.clicker:hover:before {
  width: 100%;
  background: #FAA81D;
}

h1 {
  font-family: "Abril Fatface", serif, Arial, Helvetica, sans-serif;
  font-size: 9em;
  margin-block-start: 0.5em;
  text-align: center;
}

#login-zone {
  display: flex;
  justify-content: center;
  margin-bottom: 2%;
  margin-left: 10%;
}
#login-zone #login-zone__media {
  width: 50%;
  height: 800px;
  min-height: 50vh;
  z-index: 0;
}
#login-zone #login-zone__media #video {
  height: 850px;
}
#login-zone #login-zone__form {
  border: 2px solid #000000;
  background-color: #ffffff;
  border-radius: 80px;
  font-size: 2em;
  width: 50%;
  margin-top: -2%;
  margin-right: -2%;
  min-height: 60vw;
  z-index: 1;
}
#login-zone #login-zone__form form {
  margin-top: 25%;
  margin-left: 10%;
}
#login-zone #login-zone__form form p {
  margin-top: 5%;
  font-weight: 900;
}
#login-zone #login-zone__form form p:nth-child(3) {
  margin-top: 15%;
}
#login-zone #login-zone__form form input {
  background-color: rgba(255, 0, 0, 0);
  border-top: 0px;
  border-left: 0px;
  border-right: 0px;
  border-bottom: 3px solid black;
  width: 90%;
  outline: none;
}

#see_pass {
  /*Limpieza de estilos por defecto de un bot√≥n*/
  background: none;
  color: inherit;
  border: none;
  padding: 0;
  font: inherit;
  cursor: pointer;
  outline: inherit;
  margin-left: -7%;
}

#alert {
  background-color: #FAA81D;
  border: 3px solid #000000;
  border-radius: 10px;
  display: block;
  font-weight: 800;
  font-size: 0.5em;
  height: 70px;
  margin: auto;
  margin-bottom: 5%;
  margin-top: 10%;
  text-align: center;
  width: 85.5%;
}
#alert p {
  padding-left: 2%;
  padding-right: 2%;
}

/*MEDIA QUERIES*/
@media screen and (max-width: 1024px) {
  h1 {
    font-size: 5.5em;
  }

  #login-zone {
    flex-direction: column-reverse;
    justify-content: center;
    margin: 0;
    margin-bottom: 2%;
  }

  #login-zone__form {
    width: 90%;
    margin-top: -70%;
    margin-right: auto;
    margin-left: auto;
  }

  #video {
    width: 100vw;
    object-fit: cover;
  }

  .clicker {
    background-color: #FAA81D;
    border: 3px solid black;
    border-radius: 10px;
    display: inline-block;
    font-weight: 800;
    margin: auto auto;
    margin-top: 2%;
    padding: 1%;
  }

  /* Elemento de color */
  .clicker:before {
    display: none;
  }

  .clicker span {
    position: relative;
    font-size: 16px;
    font-weight: 900;
  }

  .clicker:hover:before {
    width: 0%;
    background: #F9F9F8;
  }
}
@media screen and (max-width: 480px) {
  h1 {
    font-size: 6em;
    margin-bottom: 2%;
  }

  #login-zone {
    display: flex;
    flex-direction: column-reverse;
  }

  #login-zone__media {
    width: 100%;
    min-height: 70vw;
  }

  #video {
    width: 100%;
    object-fit: inherit;
  }

  #login-zone__form {
    width: 90%;
    margin-top: -117%;
    margin-right: auto;
    margin-left: auto;
  }

  #login-zone__form form {
    margin-left: 10%;
  }

  #alert {
    height: 80px;
    margin-bottom: 10%;
  }
}

